<h3>Sign in</h3>
<%= form_tag(sessions_path) do %>
    <div>
        <%= label_tag "name" %><br/>
        <%= text_field_tag "name" %>
    </div>
    <div>
        <%= label_tag "password" %><br/>
        <%= password_field_tag "password" %>
    </div>
    <div>
        <%= submit_tag "Log in" %>
    </div>
<% end %>